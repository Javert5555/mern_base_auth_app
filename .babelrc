{
    "presets": [
        ["@babel/preset-env", 
        // is a smart preset that allows you to use the latest JavaScript without
        // needing to micromanage which syntax transforms (and optionally, browser polyfills) are needed by your target environment(s)
        {
            "targets": {
                "node": "current"
            }
        }
    ],
    "@babel/preset-react" // Babel can convert JSX syntax
    ],
    "plugins": [
        "react-hot-loader/babel" // it allows scripts that have recently been changed to be updated without the need to refresh the app/page
    ]
}

